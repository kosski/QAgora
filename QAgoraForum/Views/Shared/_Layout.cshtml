<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — AgoraForum</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class=" container">
            <div class=" row">

                <!--logo start-->
                <div class="navbar-header col-md-3">
                    @Html.ActionLink("QAgora", "Index", "Home", null, null)
                </div>
                <!--logo end-->
                <div class="col-md-3 col-md-push-1" id="top_menu">
                    <!--  search form start -->
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                    {
                        <input id="SearchBox" type="text" name="name" class="form-control " />
                    }
                    <!--  search form end -->
                </div>
                <div class="col-md-4 col-md-push-2">
                    @Html.Partial("Notification")
                </div>

            </div>
        </div>
    </header>
    <section id="main-content">
        <section class="container">
            <!-- page start-->
            @RenderBody()
            <!-- page end-->
        </section>
    </section>
    <div id="modalPlace"></div>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(".jqte").jqte();
    </script>
    <script type="text/javascript">
        $('#registerLink').click(function () {
            $.ajax({
                type: "GET",
                url: '/Home/_modalWindow/_login'
            }).success(function (data) {
                $('#modalPlace').html(data);
            });
        })
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
